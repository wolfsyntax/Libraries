<p id="notice"><%= notice %></p>

<h1>Libraries</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Title</th>
      <th>Author</th>
      <th>Length</th>
      <th>Edition</th>
      <th>Language</th>
      <th>Publisher</th>
      <th>Publicationdate</th>
      <th>Isbn</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.book_id %></td>
        <td><%= library.title %></td>
        <td><%= library.author %></td>
        <td><%= library.length %></td>
        <td><%= library.edition %></td>
        <td><%= library.language %></td>
        <td><%= library.publisher %></td>
        <td><%= library.publicationDate %></td>
        <td><%= library.isbn %></td>
        <td><%= library.description %></td>
        <td><%= link_to 'Show', library %></td>
        <td><%= link_to 'Edit', edit_library_path(library) %></td>
        <td><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

